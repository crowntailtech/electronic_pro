{
    "AWSEBDockerrunVersion": "3",
    "containerDefinitions": [
      {
        "name": "frontend",
        "image": "650251723733.dkr.ecr.us-east-1.amazonaws.com/my-frontend:latest",
        "essential": true,
        "memory": 512,
        "portMappings": [
          {
            "containerPort": 3000,
            "hostPort": 3000
          }
        ],
        "mountPoints": [
          {
            "sourceVolume": "frontend-app",
            "containerPath": "/app"
          }
        ],
        "links": ["backend"]
      },
      {
        "name": "backend",
        "image": "650251723733.dkr.ecr.us-east-1.amazonaws.com/my-backend:latest",
        "essential": true,
        "memory": 512,
        "portMappings": [
          {
            "containerPort": 8000,
            "hostPort": 8000
          }
        ],
        "mountPoints": [
          {
            "sourceVolume": "backend-app",
            "containerPath": "/app"
          }
        ],
        "environment": [
          { "name": "DB_HOST", "value": "<your-aurora-endpoint>" },
          { "name": "DB_PORT", "value": "3306" },
          { "name": "DB_NAME", "value": "<your-database-name>" },
          { "name": "DB_USER", "value": "<your-username>" },
          { "name": "DB_PASSWORD", "value": "<your-password>" }
        ]
      }
    ],
    "volumes": [
      {
        "name": "frontend-app",
        "host": {
          "sourcePath": "/var/app/current/frontend"
        }
      },
      {
        "name": "backend-app",
        "host": {
          "sourcePath": "/var/app/current/backend"
        }
      }
    ]
  }
  